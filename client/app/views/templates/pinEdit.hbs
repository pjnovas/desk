
<div class="row">
  <div class="col-xs-12 separator-line">  
    <textarea id="txt-text" class="form-control">{{text}}</textarea>
  </div>
</div>

<div class="row">

  <div class="col-xs-5">
    <div class="input-group">
      <span class="input-group-addon">
        <i class="fa fa-tags"></i>  
      </span>
      <input id="txt-tags" type="text" class="form-control" placeholder="tags" value="{{tags}}">
    </div>
  </div>

  <div class="col-xs-5">
    <div class="input-group">
      <span class="input-group-addon">
        <i class="fa fa-link"></i>  
      </span>
      <input id="txt-link" type="text" class="form-control" placeholder="link" value="{{link}}">
    </div>
  </div>

  <div class="col-xs-2">
    <a class="acn-btn save-pin">
      <i class="fa fa-save"></i>
    </a>
  </div>
</div>
